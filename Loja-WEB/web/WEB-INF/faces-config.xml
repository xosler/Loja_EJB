<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <navigation-rule>
        <from-view-id>/v2/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>sucesso</from-outcome>
            <to-view-id>/v2/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>erro</from-outcome>
            <to-view-id>/v2/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cadastro</from-outcome>
            <to-view-id>/v2/cadastro.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/v2/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
<!--        validar essa ainda-->
        <from-view-id>/v2/comprar.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>deslogado</from-outcome>
            <to-view-id>/v2/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/v2/carrinho.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>comprar</from-outcome>
            <to-view-id>/v2/comprar.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>detalhesProduto</from-outcome>
            <to-view-id>/v2/detalhesProduto.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/v2/cadastro.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>sucesso</from-outcome>
            <to-view-id>/v2/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>erro</from-outcome>
            <to-view-id>/v2/cadastro.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/v2/cadastroProduto.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>cadastrarCategoria</from-outcome>
            <to-view-id>/v2/cadastroCategoria.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>lista</from-outcome>
            <to-view-id>/v2/listaProduto.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>detalhes</from-outcome>
            <to-view-id>/v2/detalhesProduto.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/v2/cadastroCategoria.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>cadastrarProduto</from-outcome>
            <to-view-id>/v2/cadastroProduto.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>lista</from-outcome>
            <to-view-id>/v2/listaCategoria.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/v2/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>cadastrarProduto</from-outcome>
            <to-view-id>/v2/cadastroProduto.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cadastrarCategoria</from-outcome>
            <to-view-id>/v2/cadastroCategoria.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>listaProdutos</from-outcome>
            <to-view-id>/v2/listaProduto.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>listaCategorias</from-outcome>
            <to-view-id>/v2/listaCategoria.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
